<?xml version='1.0' encoding='utf-8'?>
<widget 
	id="ar.com.ingverger.desbloqueame" 
	versionCode = "10001"
	version="1.0.1" 
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>desbloqueame</name>
    <description>
		Hibrido de Mastermind y el patron de bloqueo de Android. Un juego para amar y odiar.
    </description>
    <author email="info@ingverger.com.ar" href="http://www.ingverger.com.ar/desbloqueame">
        Willie Verger Clever Games
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android"><allow-intent href="market:*" /></platform>
    <platform name="browser"><allow-intent href="market:*" /></platform>
	<preference name="windows-target-version" value="10.0" />

	<icon src="icon.png" />
</widget>
